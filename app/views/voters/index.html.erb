<div class="table-responsive container">
 <div class="alert alert-success" role="alert">
  <h2 class="alert-heading"><center>Voters</center></h2>
</div>
<hr class="new4">
<div class="table-responsive container">
      <%= link_to '+Add New Voter', new_voter_url, class: "btn btn-info mb-2 float-right" %>

        <div class="table-responsive-sm">
          <table class="table table-striped table-light text-black table-hover table table-bordered ">
            <thead>
              <tr class="table-success">
                
                <th>First Name</th>
                <th>Last Name</th>
                <th>Voter ID</th>
                <th>Age</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Aadhar</th>
                <th>Address</th>
                <th>Action</th>
              </tr>
            </thead>
              <tbody>
                <% @voters.all.each do |voter| %>
                  <tr>
                    
                    <td><%= voter.firstname %></td>
                    <td><%= voter.lastname %></td>
                    <td><%= voter.voter_id %></td>
                    <td><%= voter.age %></td>
                    <td><%= voter.phone %></td>
                    <td><%= voter.gender %></td>
                    <td><%= voter.aadhar_number %></td>
                    <td><%= voter.address%></td>
                    <td>
                      <div class="btn-group" role="group" aria-label="Basic example">
                      <%= link_to 'Edit', edit_voter_url(voter), class: "btn btn-success me-2 mr-1" %>
                      <%= link_to 'Delete', voter_url(id: voter.id), method: :delete, class: "btn btn-danger me-2 mr-1" %>
                    </div>
                  </tr>
                <% end %>
              </tbody>
          </table>
      
  </div>

