<hr>
<div class="table-responsive container">
 <div class="alert alert-danger" role="alert">
  <h2 class="alert-heading"><center>Candidates</center></h2>
</div>
  <hr class="new4">
  <% if user_signed_in? %>
    <%= link_to '+Add New Candiadate', new_candidate_url, class: "btn btn-info mb-2 float-right" %>
  <% end %>

  <table class="table table-striped table-light text-black table-hover table table-bordered ">
    <thead>
      <tr class="table-success">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Party</th>
        <th>Age</th>
        <th>Phone</th>
        <th>Gender</th>
        <th>Aadhar</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @candidates.all.each do |candidate| %>
        <tr>
          <td><%= candidate.firstname %></td>
          <td><%= candidate.lastname %></td>
          <td><%= candidate.party %></td>
          <td><%= candidate.age %></td>
          <td><%= candidate.phone %></td>
          <td><%= candidate.gender %></td>
          <td><%= candidate.aadhar_number %></td>
          <td><%= candidate.address%></td>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <% if user_signed_in? %>
                <%= link_to 'Edit', edit_candidate_url(candidate), class: "btn btn-success me-2 mr-1" %>
                <%= link_to 'Delete', candidate_url(id: candidate.id), method: :delete, class: "btn btn-danger me-2 mr-1" %>
              <% else %>
                <%= link_to 'Vote', vote_records_url(candidate_id: candidate.id, voter_id: @voter.id), method: :post, class: "btn btn-danger me-2 mr-1" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

