<hr>
<div class='container'>
  <h3 ><center>Edit Your Details</center></h3>
<hr>
  <%= form_with model: @candidate do |form| %>
  <div class="form-row">
    <div class='form-group col-md-4'>
      <%= form.text_field :firstname, class: 'form-control', placeholder: 'First Name' %>
    </div>

    <div class='form-group col-md-4'>
      <%= form.text_field :lastname, class: 'form-control', placeholder: 'Last Name'%>
    </div>
    <div class='form-group col-md-4'>
      <%= form.text_field :party, class: 'form-control', placeholder: 'party'%>
    </div>
  </div>

  <div class="form-row">
    <div class='form-group col-md-6'>
      <%= form.date_field :dob, class: 'form-control', placeholder: 'DOB' %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.text_field :phone, class: 'form-control', placeholder: 'Phone' %>
    </div>
  </div>
  <div class="form-row">
     <div class='form-group col-md-6'>
      <%= form.select :gender, ['male', 'female'], { prompt: '-- Select Gender --' }, class: 'form-control' %>
  </div>

  <div class='form-group col-md-6'>
      <%= form.text_field :aadhar_number , class: 'form-control', placeholder: 'Aadhar-number' %>
    </div>
  </div>

    <div class='form-group'>
      <%= form.text_field :address1, class: 'form-control', placeholder: 'Address-1' %>
    </div>

    <div class='form-group'>
      <%= form.text_field :address2, class: 'form-control', placeholder: 'Address-2' %>
    </div>

  <div class="form-row">

    <div class='form-group col-md-6'>
      <%= form.text_field :city, class: 'form-control', placeholder: 'City' %>
    </div>

    <div class='form-group col-md-4'>
      <%= form.text_field :state, class: 'form-control', placeholder: 'State' %>
    </div>

    <div class='form-group col-md-2'>
      <%= form.text_field :pin, class: 'form-control', placeholder: 'Pin' %>
    </div>
  </div>

  
    <div class='col-md-12 text-center'>
      <%= form.submit 'Submit', class: 'btn btn-primary btn-lg'%>
    </div>
  
  <% end %>
</div>
